{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "module": "node16",
    "jsx": "preserve",
    "noEmit": true,
    "declaration": true,
    "declarationDir": "lib",
    "noImplicitAny": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tests/**/*.ts", "lib"]
}
