{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "..",
    "module": "node16",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "../src/**/*.ts"]
}
